<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="Principal">
    <TextView
        android:text="@string/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvnombre"
        />
     <TextView
         android:id="@+id/tvapellido"
         android:text="Apellido"
         android:layout_width="wrap_content"
         android:layout_alignBottom="@+id/etapellido"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true"
         android:layout_height="wrap_content" />
    <TextView
        android:text="Telefono:"
        android:id="@+id/tvtelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/etapellido"
        />
    <EditText
        android:id="@+id/etnombre"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvtelefono"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        />
    <EditText
        android:ems="30"
        android:id="@+id/etapellido"
        android:layout_alignLeft="@id/etnombre"
        android:layout_alignStart="@id/etnombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ems="15"
        android:id="@+id/ettelefono"
        android:layout_alignBottom="@+id/tvtelefono"
        android:layout_alignLeft="@+id/etapellido"
        android:layout_alignStart="@+id/etapellido"
         />
     <Button
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:text="Guardar"
         android:id="@+id/btguardar"
         android:layout_below="@+id/ettelefono"
         android:layout_alignParentRight="true"
         android:layout_alignParentEnd="true"
         android:layout_marginTop="35dp"
         android:layout_marginEnd="67dp"
         android:layout_marginRight="67dp"
         />
</RelativeLayout>